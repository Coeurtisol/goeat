{% extends 'base.html.twig' %}

{% block title %}Go Eat
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block body %}
	<ul class="restaurateur">
		{% for restaurant in restaurants %}
			<li class="unRestau">
				<div class="vitrine"><img></div>
				<div class="detail">
					<span class="titleRestau">{{ restaurant.raisonSociale }}</span>
					<button> <a href="{{path('restaurant_show', {'id':restaurant.id}) }}">Afficher la carte</a></button>
				</div>
			</li>
		{% endfor %}
	</ul>

{% endblock %}
