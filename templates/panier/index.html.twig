{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/panier.css') }}">
{% endblock %}

{% block body %}

	{% if plats | length > 0 %}

	<ul class="listePanier">

				{% for plat in plats %}
				
				<li>

			    <img src="{{asset("images/plat/"~ plat.plat.photo)}}">
				<span class="nom">{{plat.plat.nom}}</span>
				<span class="prix">{{plat.plat.prix / 100}} €</span>
				<span class="quantite">x{{plat.quantite}}</span>

				<a href="{{ path('retirer_plat', {'id': plat.plat.id}) }}">✖</a>

				</li>

					
					
				{% endfor %}

				<li class="totalPanier">
				{{total / 100}} € dont 3€ de frais de livraison
				</li>

				<button><a href="{{ path('commande_new') }}">Commander</a></button>

				</ul>


			



	{% else %}
		<div>le panier est vide</div>
	{% endif %}

{% endblock %}
